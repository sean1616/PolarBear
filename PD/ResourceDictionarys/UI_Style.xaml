                <GradientStop Offset="0.9"
                              Color="#EEE" />
                <GradientStop Offset="1.0"
                              Color="#FFF" />
            </GradientStopCollection>
        </LinearGradientBrush.GradientStops>
    </LinearGradientBrush>

