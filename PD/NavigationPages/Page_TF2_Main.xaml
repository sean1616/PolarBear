                           Grid.Column="2" HorizontalAlignment="Center" VerticalAlignment="Center" Text="{Binding opModel_1.WL_2_IL, Mode=TwoWay}" />
                    <Button Style="{DynamicResource style_BearBtn_FixFont}" Tag="2" Margin="7" 
                            Content="{Binding opModel_1.WL_2_PDL, Mode=TwoWay}" Grid.Row="2" Grid.Column="3" Click="Button_PDL_Click"/>
                    <TextBox Grid.Row="2" Grid.Column="4" HorizontalAlignment="Center" VerticalAlignment="Center"  FontFamily="Segoe Print"
                               Text="{Binding opModel_1.WL_2_Mic,Mode=TwoWay}" />
                    <!--#endregion-->

                    <!--#region WL 3 OP-->
                    <TextBlock 
                           Grid.Row="3"
                           Grid.Column="1" HorizontalAlignment="Center" VerticalAlignment="Center" Text="{Binding opModel_1.WL_3_CWL, Mode=TwoWay}" />
                    <TextBlock 
