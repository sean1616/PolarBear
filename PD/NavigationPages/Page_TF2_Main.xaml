                           Grid.Column="2" HorizontalAlignment="Center" VerticalAlignment="Center" Text="{Binding opModel_1.WL_3_IL, Mode=TwoWay}" />
                    <Button Style="{DynamicResource style_BearBtn_FixFont}" Tag="3" Margin="7" 
                            Content="{Binding opModel_1.WL_3_PDL, Mode=TwoWay}" Grid.Row="3" Grid.Column="3" Click="Button_PDL_Click"/>

                    <TextBox Grid.Row="3" Grid.Column="4" HorizontalAlignment="Center" VerticalAlignment="Center"  FontFamily="Segoe Print"
                               Text="{Binding opModel_1.WL_3_Mic,Mode=TwoWay}" />
                    <!--#endregion-->

                    <!--#region WL 4 OP-->
                    <TextBlock 
                           Grid.Row="4"
                           Grid.Column="1" HorizontalAlignment="Center" VerticalAlignment="Center" Text="{Binding opModel_1.WL_4_CWL, Mode=TwoWay}" />
                    <TextBlock 
                           Grid.Row="4"
                           Grid.Column="2" HorizontalAlignment="Center" VerticalAlignment="Center" Text="{Binding opModel_1.WL_4_IL, Mode=TwoWay}" />
                    <Button Style="{DynamicResource style_BearBtn_FixFont}" Tag="4" Margin="7" 
                            Content="{Binding opModel_1.WL_4_PDL, Mode=TwoWay}" Grid.Row="4" Grid.Column="3" Click="Button_PDL_Click"/>

                    <TextBox Grid.Row="4" Grid.Column="4" HorizontalAlignment="Center" VerticalAlignment="Center" FontFamily="Segoe Print"
                               Text="{Binding opModel_1.WL_4_Mic,Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}" />
                    <!--#endregion-->


                    <!--Title-->
                    <!--#region Title-->
                    <TextBlock Text="WL T"
                            FontFamily="Segoe Print"
                               Foreground="White"
                           HorizontalAlignment="Center"
                           VerticalAlignment="Center" Grid.Row="5"/>
                    <TextBlock Text="CWL"
                           Grid.Column="1"
                           FontFamily="Segoe Print"
                                Foreground="White"
                           HorizontalAlignment="Center"
                           VerticalAlignment="Center"
                           Grid.Row="5" />
                    <Grid Grid.Row="5" Grid.Column="2">
                        <StackPanel Orientation="Horizontal" HorizontalAlignment="Center">
                            <TextBox Text="{Binding opModel_1.BW_Setting_1, Mode=TwoWay}" VerticalAlignment="Center" BorderBrush="Transparent" FontFamily="Segoe Print" Background="#FF1FCCD4" Foreground="White"/>
                            <TextBlock Text="BW" VerticalAlignment="Center" FontFamily="Segoe Print" Foreground="White"/>
                        </StackPanel>
                    </Grid>
                    <Grid Grid.Row="5" Grid.Column="3">
                        <StackPanel Orientation="Horizontal" HorizontalAlignment="Center">
                            <TextBox Text="{Binding opModel_1.BW_Setting_2, Mode=TwoWay}" VerticalAlignment="Center" BorderBrush="Transparent" FontFamily="Segoe Print" Background="#FF1FCCD4" Foreground="White"/>
                            <TextBlock Text="BW" VerticalAlignment="Center" FontFamily="Segoe Print" Foreground="White"/>
                        </StackPanel>
                    </Grid>
                    <Grid Grid.Row="5" Grid.Column="4">
                        <StackPanel Orientation="Horizontal" HorizontalAlignment="Center">
                            <TextBox Text="{Binding opModel_1.BW_Setting_3, Mode=TwoWay}" VerticalAlignment="Center" BorderBrush="Transparent" FontFamily="Segoe Print" Background="#FF1FCCD4" Foreground="White"/>
                            <TextBlock Text="BW" VerticalAlignment="Center" FontFamily="Segoe Print" Foreground="White"/>
                        </StackPanel>
                    </Grid>
                    <!--#endregion-->

                    <!--#region WL button-->
                    <Button Style="{DynamicResource style_BearBtn}" Tag="1" Margin="7"
                            Content="{Binding opModel_1.WL_Setting_1}" Grid.Row="6" Click="Button_WL_Click"/>
                    <Button Style="{DynamicResource style_BearBtn}" Tag="2" Margin="7"
                            Content="{Binding opModel_1.WL_Setting_2}" Grid.Row="7" Click="Button_WL_Click"/>
                    <Button Style="{DynamicResource style_BearBtn}" Tag="3" Margin="7"
                            Content="{Binding opModel_1.WL_Setting_3}" Grid.Row="8" Click="Button_WL_Click"/>
                    <Button Style="{DynamicResource style_BearBtn}" Tag="4" Margin="7"
                            Content="   ?   nm" Grid.Row="9" Click="Button_WL_Click"/>
                    <!--#endregion-->

                    <!--#region WL 1 BW-->
                    <TextBlock 
                           Grid.Row="6"
                           FontFamily="Segoe Print"
                           Grid.Column="1" HorizontalAlignment="Center" VerticalAlignment="Center" Text="{Binding opModel_1.WL_1_CWL, Mode=TwoWay}" />
                    <TextBlock 
                           Grid.Row="6"
                           FontFamily="Segoe Print"
                           Grid.Column="2" HorizontalAlignment="Center" VerticalAlignment="Center" Text="{Binding opModel_1.WL_1_BW_1, Mode=TwoWay}" />
                    <TextBlock 
                           Grid.Row="6"
                           FontFamily="Segoe Print"
                           Grid.Column="3" HorizontalAlignment="Center" VerticalAlignment="Center" Text="{Binding opModel_1.WL_1_BW_2, Mode=TwoWay}" />
                    <TextBlock 
                           Grid.Row="6"
                           FontFamily="Segoe Print"
                           Grid.Column="4" HorizontalAlignment="Center" VerticalAlignment="Center" Text="{Binding opModel_1.WL_1_BW_3, Mode=TwoWay}" />
                    <!--#endregion-->

                    <!--#region WL 2 BW-->
                    <TextBlock 
                           Grid.Row="7"
                           FontFamily="Segoe Print"
                           Grid.Column="1" HorizontalAlignment="Center" VerticalAlignment="Center" Text="{Binding opModel_1.WL_2_CWL, Mode=TwoWay}" />
                    <TextBlock 
                           Grid.Row="7"
                           FontFamily="Segoe Print"
                           Grid.Column="2" HorizontalAlignment="Center" VerticalAlignment="Center" Text="{Binding opModel_1.WL_2_BW_1, Mode=TwoWay}" />
                    <TextBlock 
                           Grid.Row="7"
                           FontFamily="Segoe Print"
                           Grid.Column="3" HorizontalAlignment="Center" VerticalAlignment="Center" Text="{Binding opModel_1.WL_2_BW_2, Mode=TwoWay}" />
                    <TextBlock 
                           Grid.Row="7"
                           FontFamily="Segoe Print"
                           Grid.Column="4" HorizontalAlignment="Center" VerticalAlignment="Center" Text="{Binding opModel_1.WL_2_BW_3, Mode=TwoWay}" />
                    <!--#endregion-->

                    <!--#region WL 3 BW-->
                    <TextBlock 
                           Grid.Row="8"
                           FontFamily="Segoe Print"
                           Grid.Column="1" HorizontalAlignment="Center" VerticalAlignment="Center" Text="{Binding opModel_1.WL_3_CWL, Mode=TwoWay}" />
                    <TextBlock 
                           Grid.Row="8"
                           FontFamily="Segoe Print"
                           Grid.Column="2" HorizontalAlignment="Center" VerticalAlignment="Center" Text="{Binding opModel_1.WL_3_BW_1, Mode=TwoWay}" />
                    <TextBlock 
                           Grid.Row="8"
                           FontFamily="Segoe Print"
                           Grid.Column="3" HorizontalAlignment="Center" VerticalAlignment="Center" Text="{Binding opModel_1.WL_3_BW_2, Mode=TwoWay}" />
                    <TextBlock 
                           Grid.Row="8"
                           FontFamily="Segoe Print"
                           Grid.Column="4" HorizontalAlignment="Center" VerticalAlignment="Center" Text="{Binding opModel_1.WL_3_BW_3, Mode=TwoWay}" />
                    <!--#endregion-->

                    <!--#region WL 4 BW-->
                    <TextBlock 
                           Grid.Row="9"
                           FontFamily="Segoe Print"
                           Grid.Column="1" HorizontalAlignment="Center" VerticalAlignment="Center" Text="{Binding opModel_1.WL_4_CWL, Mode=TwoWay}" />
                    <TextBlock 
                           Grid.Row="9"
                           FontFamily="Segoe Print"
                           Grid.Column="2" HorizontalAlignment="Center" VerticalAlignment="Center" Text="{Binding opModel_1.WL_4_BW_1, Mode=TwoWay}" />
                    <TextBlock 
                           Grid.Row="9"
                           FontFamily="Segoe Print"
                           Grid.Column="3" HorizontalAlignment="Center" VerticalAlignment="Center" Text="{Binding opModel_1.WL_4_BW_2, Mode=TwoWay}" />
                    <TextBlock 
                           Grid.Row="9"
                           FontFamily="Segoe Print"
                           Grid.Column="4" HorizontalAlignment="Center" VerticalAlignment="Center" Text="{Binding opModel_1.WL_4_BW_3, Mode=TwoWay}" />
                    <!--#endregion-->
                    
                    <!--#region Mic. Limit-->
                    <Border Background="#FF1FCCD4" Grid.Row="11"  CornerRadius="12,0,0,12"/>
                    <TextBlock Text="Mic.&#x0A;Range"
                               
                               Foreground="White"
                           HorizontalAlignment="Center"
                           VerticalAlignment="Center" Grid.Row="11"/>
                    <!--#endregion-->
                </Grid>

            </Grid>
        </Grid>

        <Grid Grid.Row="1" Name="grid_bear_say"
              Background="#FFF1F1F1">
            <Grid.DataContext>
                <vm:ComViewModel />
            </Grid.DataContext>
            <Grid.RowDefinitions>
                <RowDefinition Height="1*" />
                <RowDefinition Height="3*" />
                <RowDefinition />
                <RowDefinition Height="0.01*" />
            </Grid.RowDefinitions>
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="0.1*" />
                <ColumnDefinition Width="0.7*" />
                <ColumnDefinition Width="1*" />
                <ColumnDefinition Width="0.95*" />
                <ColumnDefinition Width="0.95*" />
                <ColumnDefinition Width="0.95*" />
                <ColumnDefinition Width="0.95*" />
                <ColumnDefinition Width="0.05*" />
            </Grid.ColumnDefinitions>
            <Border Grid.Row="0"
                    Grid.Column="0"
                    Grid.ColumnSpan="10"
                    Background="#FFE6E6E6"                    
                    Focusable="False"
                    Grid.RowSpan="10"
                    PreviewMouseLeftButtonDown="Border_PreviewMouseLeftButtonDown" />

            <Viewbox Grid.Row="0"
                     Grid.RowSpan="3"
                     Grid.Column="1"
                     Visibility="Collapsed"
                     Margin="10">
                <Border 
                        Background="Transparent"
                        MouseEnter="image_MouseEnter"
                        MouseLeave="grid_sector_btns_MouseLeave"
                        Grid.Column="1">
                    <Grid>
                        <Grid.RowDefinitions>
                            <RowDefinition Height="1*" />
                            <RowDefinition  Height="0.5*" />
                            <RowDefinition Height="1*" />
                        </Grid.RowDefinitions>
                        <!--Bear image-->
                        <Image x:Name="image"
                               Grid.Row="0"
                               Grid.RowSpan="3"
                               MouseEnter="image_MouseEnter"
                               Visibility="Hidden"
                               Source="../Resources/polar-bear.png" />

                        <!--Text in circle-->
                        <Viewbox Grid.Row="1"
                                 Margin="0,261,0,261">
                            <TextBlock Visibility="{Binding Visibility, ElementName=grid_sector_btns}">        
                                <Run Text="{Binding int_chart_now}"
                                     FontFamily="Segoe Print" />
                             <Run Text="/"
                                  FontFamily="Segoe Print" />
                             <Run Text="{Binding int_chart_count}"
                                  FontFamily="Segoe Print" />
                            </TextBlock>
                        </Viewbox>

                        <!--Buttons-->
                        <Grid Grid.Row="0"
                              Name="grid_sector_btns"
                              Visibility="Visible"
                              Grid.RowSpan="3"
                              Grid.Column="1">
                            <!--Right-->
                            <Viewbox>
                                <sector_btn:Sector_BTN Arc_StartAngle="45"
                                                       Arc_EndAngle="135"
                                                       x:Name="btn_aft"
                                                       Grid.ColumnSpan="2"
                                                       grid_column="2"
                                                       grid_row="1"
                                                       Margin="10,10,0,10"
                                                       img_height="40"
                                                       img_width="40"
                                                       Tag="../Resources/double_arrow.png"
                                                       ButtonBase.Click="btn_aft_Click" />
                            </Viewbox>
                            <!--Down-->
                            <Viewbox>
                                <sector_btn:Sector_BTN x:Name="btn_page2"
                                                       grid_column="1"
                                                       grid_row="2"
                                                       img_height="28"
                                                       img_width="28"
                                                       Margin="10,10,10,0"
                                                       Tag="../Resources/r-arrow.png"
                                                       rotate_angle="90"
                                                       ButtonBase.Click="Btn_page2_Click"
                                                       Arc_StartAngle="135"
                                                       Arc_EndAngle="225" />
                            </Viewbox>
                            <!--Left-->
                            <Viewbox>
                                <sector_btn:Sector_BTN  x:Name="btn_pre"
                                                        grid_column="0"
                                                        grid_row="1"                                                        
                                                        Margin="0,10,10,10"
                                                        img_height="40"
                                                        img_width="40"
                                                        rotate_angle="180"
                                                        ButtonBase.Click="btn_pre_Click"
                                                        Tag="../Resources/double_arrow.png"
                                                        Arc_StartAngle="225"
                                                        Arc_EndAngle="315" />
                            </Viewbox>
                            <!--Up-->
                            <Viewbox>
                                <sector_btn:Sector_BTN x:Name="btn_page1"
                                                       grid_column="1"
                                                       grid_row="0"
                                                       img_height="28"
                                                       img_width="28"
                                                       Margin="10,0,10,10"
                                                       rotate_angle="-90"
                                                       ButtonBase.Click="Btn_page1_Click"
                                                       Tag="../Resources/r-arrow.png"
                                                       Arc_StartAngle="315"
                                                       Arc_EndAngle="45" />
                            </Viewbox>
                        </Grid>
                    </Grid>
                </Border>
            </Viewbox>

            <Viewbox Grid.Column="1"
                     Margin="10" Grid.RowSpan="3">
                <Border 
                        Background="Transparent"
                        MouseEnter="image_MouseEnter"
                        MouseLeave="grid_sector_btns_MouseLeave"
                        Grid.Column="1">
                    <Grid>
                        <Grid.RowDefinitions>
                            <RowDefinition Height="1*" />
                            <RowDefinition  Height="0.5*" />
                            <RowDefinition Height="1*" />
                        </Grid.RowDefinitions>
                        <!--Bear image-->
                        <!--<Image 
                               Grid.Row="0"
                               Grid.RowSpan="3"
                               MouseEnter="image_MouseEnter"
                               Visibility="Hidden"
                               Source="../Resources/polar-bear.png" />-->

                        <!--Text in circle-->
                        <!--Text in circle-->
                        <Viewbox Grid.Row="1">
                            <TextBlock Visibility="{Binding Visibility, ElementName=grid_sector_btns}" Text="PDL" Margin="15"/>
                        </Viewbox>

                        <!--Buttons-->
                        <Grid Grid.Row="0"
                             
                              Visibility="Visible"
                              Grid.RowSpan="3"
                              Grid.Column="1">
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="46*"/>
                                <ColumnDefinition Width="9*"/>
                            </Grid.ColumnDefinitions>
