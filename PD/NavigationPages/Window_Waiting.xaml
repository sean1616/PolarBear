    <!--<Window.DataContext>
        <local:Window_Waiting/>
    </Window.DataContext>-->
    
    <Grid x:Name="grid" RenderTransformOrigin="0.5,0.5">
        <Grid.RenderTransform>
            <TransformGroup>
                <ScaleTransform/>
                <SkewTransform/>
                <RotateTransform/>
                <TranslateTransform/>
            </TransformGroup>
        </Grid.RenderTransform>

        <Label HorizontalAlignment="Center" VerticalAlignment="Center" 
               Content="{Binding Center_MSG, RelativeSource={RelativeSource FindAncestor, AncestorType={x:Type local:Window_Waiting}}}" 
               FontFamily="Segoe Print" FontSize="23" Foreground="#FF385697"/>

        <Grid x:Name="grid_circle_base" RenderTransformOrigin="0.5,0.5" Margin="20">
            <Ellipse x:Name="ellipse" Fill="#FF94C3EA" 
            Height="30"
            Width="30" RenderTransformOrigin="0.5,0.5" HorizontalAlignment="Center" VerticalAlignment="Top"
                     Opacity="{Binding list_opa[0], NotifyOnSourceUpdated=True,RelativeSource={RelativeSource FindAncestor, AncestorType={x:Type local:Window_Waiting}}}"
                     />
        </Grid>

        <Grid RenderTransformOrigin="0.5,0.5" Margin="{Binding Margin, ElementName=grid_circle_base}">
            <Grid.RenderTransform>
                <TransformGroup>
                    <ScaleTransform/>
                    <SkewTransform/>
                    <RotateTransform Angle="40"/>
                    <TranslateTransform/>
                </TransformGroup>
            </Grid.RenderTransform>
            <Ellipse x:Name="ellipse1" Fill="{Binding Fill, ElementName=ellipse}" 
            Height="{Binding ActualHeight, ElementName=ellipse}"
            Width="{Binding ActualHeight, ElementName=ellipse}" RenderTransformOrigin="0.5,0.5" HorizontalAlignment="Center" VerticalAlignment="Top" 
                     Opacity="{Binding list_opa[1], NotifyOnSourceUpdated=True,RelativeSource={RelativeSource FindAncestor, AncestorType={x:Type local:Window_Waiting}}}"
                     />
        </Grid>

        <Grid RenderTransformOrigin="0.5,0.5" Margin="{Binding Margin, ElementName=grid_circle_base}">
            <Grid.RenderTransform>
                <TransformGroup>
                    <ScaleTransform/>
                    <SkewTransform/>
                    <RotateTransform Angle="80"/>
                    <TranslateTransform/>
                </TransformGroup>
            </Grid.RenderTransform>
            <Ellipse x:Name="ellipse2" Fill="{Binding Fill, ElementName=ellipse}" 
            Height="{Binding ActualHeight, ElementName=ellipse}"
            Width="{Binding ActualHeight, ElementName=ellipse}" RenderTransformOrigin="0.5,0.5" HorizontalAlignment="Center" VerticalAlignment="Top" 
                    Opacity="{Binding list_opa[2], NotifyOnSourceUpdated=True,RelativeSource={RelativeSource FindAncestor, AncestorType={x:Type local:Window_Waiting}}}"
                     />
        </Grid>

        <Grid RenderTransformOrigin="0.5,0.5" Margin="{Binding Margin, ElementName=grid_circle_base}">
            <Grid.RenderTransform>
                <TransformGroup>
                    <ScaleTransform/>
                    <SkewTransform/>
                    <RotateTransform Angle="120"/>
                    <TranslateTransform/>
                </TransformGroup>
            </Grid.RenderTransform>
            <Ellipse x:Name="ellipse3" Fill="{Binding Fill, ElementName=ellipse}" 
            Height="{Binding ActualHeight, ElementName=ellipse}"
            Width="{Binding ActualHeight, ElementName=ellipse}" RenderTransformOrigin="0.5,0.5" HorizontalAlignment="Center" VerticalAlignment="Top" 
                     Opacity="{Binding list_opa[3], NotifyOnSourceUpdated=True,RelativeSource={RelativeSource FindAncestor, AncestorType={x:Type local:Window_Waiting}}}"
                     />
        </Grid>

        <Grid RenderTransformOrigin="0.5,0.5" Margin="{Binding Margin, ElementName=grid_circle_base}">
            <Grid.RenderTransform>
                <TransformGroup>
                    <ScaleTransform/>
                    <SkewTransform/>
                    <RotateTransform Angle="160"/>
                    <TranslateTransform/>
                </TransformGroup>
            </Grid.RenderTransform>
            <Ellipse x:Name="ellipse4" Fill="{Binding Fill, ElementName=ellipse}" 
            Height="{Binding ActualHeight, ElementName=ellipse}"
            Width="{Binding ActualHeight, ElementName=ellipse}" RenderTransformOrigin="0.5,0.5" HorizontalAlignment="Center" VerticalAlignment="Top" 
                     Opacity="{Binding list_opa[4], NotifyOnSourceUpdated=True,RelativeSource={RelativeSource FindAncestor, AncestorType={x:Type local:Window_Waiting}}}"
                     />
        </Grid>

        <Grid RenderTransformOrigin="0.5,0.5" Margin="{Binding Margin, ElementName=grid_circle_base}">
            <Grid.RenderTransform>
                <TransformGroup>
                    <ScaleTransform/>
                    <SkewTransform/>
                    <RotateTransform Angle="200"/>
                    <TranslateTransform/>
                </TransformGroup>
            </Grid.RenderTransform>
            <Ellipse x:Name="ellipse5" Fill="{Binding Fill, ElementName=ellipse}" 
            Height="{Binding ActualHeight, ElementName=ellipse}"
            Width="{Binding ActualHeight, ElementName=ellipse}" RenderTransformOrigin="0.5,0.5" HorizontalAlignment="Center" VerticalAlignment="Top" 
                     Opacity="{Binding list_opa[5], NotifyOnSourceUpdated=True,RelativeSource={RelativeSource FindAncestor, AncestorType={x:Type local:Window_Waiting}}}"
                     />
        </Grid>

        <Grid RenderTransformOrigin="0.5,0.5" Margin="{Binding Margin, ElementName=grid_circle_base}">
            <Grid.RenderTransform>
                <TransformGroup>
                    <ScaleTransform/>
                    <SkewTransform/>
                    <RotateTransform Angle="240"/>
                    <TranslateTransform/>
                </TransformGroup>
            </Grid.RenderTransform>
            <Ellipse x:Name="ellipse6" Fill="{Binding Fill, ElementName=ellipse}" 
            Height="{Binding ActualHeight, ElementName=ellipse}"
            Width="{Binding ActualHeight, ElementName=ellipse}" RenderTransformOrigin="0.5,0.5" HorizontalAlignment="Center" VerticalAlignment="Top" 
                     Opacity="{Binding list_opa[6], NotifyOnSourceUpdated=True,RelativeSource={RelativeSource FindAncestor, AncestorType={x:Type local:Window_Waiting}}}"
                     />
        </Grid>

        <Grid RenderTransformOrigin="0.5,0.5" Margin="{Binding Margin, ElementName=grid_circle_base}">
            <Grid.RenderTransform>
                <TransformGroup>
                    <ScaleTransform/>
                    <SkewTransform/>
                    <RotateTransform Angle="280"/>
                    <TranslateTransform/>
                </TransformGroup>
            </Grid.RenderTransform>
            <Ellipse x:Name="ellipse7" Fill="{Binding Fill, ElementName=ellipse}" 
            Height="{Binding ActualHeight, ElementName=ellipse}"
            Width="{Binding ActualHeight, ElementName=ellipse}" RenderTransformOrigin="0.5,0.5" HorizontalAlignment="Center" VerticalAlignment="Top" 
                     Opacity="{Binding list_opa[7], NotifyOnSourceUpdated=True,RelativeSource={RelativeSource FindAncestor, AncestorType={x:Type local:Window_Waiting}}}"
                     />
        </Grid>

        <Grid RenderTransformOrigin="0.5,0.5" Margin="{Binding Margin, ElementName=grid_circle_base}">
            <Grid.RenderTransform>
                <TransformGroup>
                    <ScaleTransform/>
                    <SkewTransform/>
                    <RotateTransform Angle="320"/>
                    <TranslateTransform/>
                </TransformGroup>
            </Grid.RenderTransform>
            <Ellipse x:Name="ellipse8" Fill="{Binding Fill, ElementName=ellipse}" 
            Height="{Binding ActualHeight, ElementName=ellipse}"
            Width="{Binding ActualHeight, ElementName=ellipse}" RenderTransformOrigin="0.5,0.5" HorizontalAlignment="Center" VerticalAlignment="Top" 
                     Opacity="{Binding list_opa[8], NotifyOnSourceUpdated=True,RelativeSource={RelativeSource FindAncestor, AncestorType={x:Type local:Window_Waiting}}}"
                     />
        </Grid>

    </Grid>

</Window>
