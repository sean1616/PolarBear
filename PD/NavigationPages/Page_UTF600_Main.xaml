                                            <i:InvokeCommandAction Command="{Binding Pre_Chart}" />
                                        </i:EventTrigger>
                                    </i:Interaction.Triggers>
                                </sector_btn:Sector_BTN>
                            </Viewbox>
                            <!--Up-->
                            <Viewbox>
                                <sector_btn:Sector_BTN x:Name="btn_page1"
                                                       grid_column="1"
                                                       grid_row="0"
                                                       img_height="28"
                                                       img_width="28"
