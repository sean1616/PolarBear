                        <TextBlock Text="BW" VerticalAlignment="Center" FontFamily="Segoe Print" FontSize="{Binding FontSize, ElementName=txt_titile_bw}"/>
                    </StackPanel>
                </Grid>
                <TextBlock x:Name="txt_BW_3"
                       Grid.Row="2"
                           FontSize="{Binding FontSize, ElementName=txt_titile_bw}"
                       FontFamily="Segoe Print"
                       Grid.Column="1" HorizontalAlignment="Center" VerticalAlignment="Center" Text="{Binding ChartNowModel.BW_3, Mode=TwoWay}" />
                <TextBlock x:Name="txt_BW_CWL_3"
                       Grid.Row="2"
                           FontSize="{Binding FontSize, ElementName=txt_titile_bw}"
