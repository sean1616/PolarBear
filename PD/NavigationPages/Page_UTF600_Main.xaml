                       Grid.Column="2" HorizontalAlignment="Center" VerticalAlignment="Center" Text="{Binding ChartNowModel.BW_CWL_3, Mode=TwoWay}" />

                <Grid Grid.Row="3">
                    <StackPanel Orientation="Horizontal" HorizontalAlignment="Center">
                        <TextBox Text="{Binding ChartNowModel.BW_Setting_4, Mode=TwoWay}" FontSize="{Binding FontSize, ElementName=txt_titile_bw}" VerticalAlignment="Center" BorderBrush="Transparent" FontFamily="Segoe Print"/>
                        <TextBlock Text="BW" VerticalAlignment="Center" FontFamily="Segoe Print" FontSize="{Binding FontSize, ElementName=txt_titile_bw}"/>
                    </StackPanel>
                </Grid>
                <TextBlock x:Name="txt_BW_4"
                       Grid.Row="3"
                           FontSize="{Binding FontSize, ElementName=txt_titile_bw}"
                       FontFamily="Segoe Print"
                       Grid.Column="1" HorizontalAlignment="Center" VerticalAlignment="Center" Text="{Binding ChartNowModel.BW_4, Mode=TwoWay}" />
                <TextBlock x:Name="txt_BW_CWL_4"
                       Grid.Row="3"
                           FontSize="{Binding FontSize, ElementName=txt_titile_bw}"
                       FontFamily="Segoe Print"
                       Grid.Column="2" HorizontalAlignment="Center" VerticalAlignment="Center" Text="{Binding ChartNowModel.BW_CWL_4, Mode=TwoWay}" />

                <TextBlock Grid.Row="4" FontFamily="Segoe Print"
                       Grid.Column="0" HorizontalAlignment="Center" VerticalAlignment="Center" Text="FOM" FontSize="{Binding FontSize, ElementName=txt_titile_bw}"/>
                <TextBlock Grid.Row="4" FontFamily="Segoe Print" x:Name="txt_FOM"
                       Grid.Column="1" HorizontalAlignment="Center" VerticalAlignment="Center" Text="{Binding ChartNowModel.FOM,Mode=TwoWay, FallbackValue=0}"
                         FontSize="{Binding FontSize, ElementName=txt_titile_bw}"/>

                <TextBlock Grid.Row="5" FontFamily="Segoe Print"
                       Grid.Column="0" HorizontalAlignment="Center" VerticalAlignment="Center" Text="SMRR" FontSize="{Binding FontSize, ElementName=txt_titile_bw}"/>
                <TextBlock Grid.Row="5" FontFamily="Segoe Print" 
                       Grid.Column="1" HorizontalAlignment="Center" VerticalAlignment="Center" 
                         Text="{Binding ChartNowModel.SMRR,Mode=TwoWay, FallbackValue=0}"
                         FontSize="{Binding FontSize, ElementName=txt_titile_bw}"/>
                <ToggleButton Name="ToggleBtn_ShowSMRRPosition"
                                      Grid.Column="2"
                                      Grid.Row="5"
                                      HorizontalAlignment="Center"
                                      MaxWidth="48"
                                      MinWidth="45"
                                      MaxHeight="30"
                              ToolTip="Show Annotation"
                                      IsChecked="{Binding isSMRR_Annotation, Mode=TwoWay}"
                                      Style="{StaticResource SwitchTypeToggleButton_In_SettingPage}">
                    <ToggleButton.Background>
                        <LinearGradientBrush StartPoint="0,0"
                                                     EndPoint="0,1">
                            <GradientStop Offset="0"
                                                  Color="#FFF3F3F3" />
                            <GradientStop Offset="0.5"
