                  Grid.RowSpan="3" Visibility="Hidden" Grid.ColumnSpan="2" Margin="0,0,334,0">
                <Grid.RowDefinitions>
                    <RowDefinition />
                    <RowDefinition />
                    <RowDefinition />
                    <RowDefinition />
                    <RowDefinition />
                </Grid.RowDefinitions>
                <TextBlock Text="PDL"
                           Grid.Row="0"
                           FontSize="20"
                           FontFamily="{Binding FontFamily, ElementName=txt_WL}"
                           VerticalAlignment="Center"
