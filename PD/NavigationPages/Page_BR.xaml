                                         Grid.Column="1" Grid.ColumnSpan="3" Grid.RowSpan="2"
                          />


            <!--Bandwidth information-->
            <Grid Grid.Row="1" Margin="70,10,70,30">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="2*"/>
                </Grid.ColumnDefinitions>
                <Grid.RowDefinitions>
                    <RowDefinition/>
                    <RowDefinition Height="0.3*"/>
                    <RowDefinition Height="4*"/>
                </Grid.RowDefinitions>
                <!--<Border Grid.ColumnSpan="3" Grid.RowSpan="7" BorderBrush="#FFD6D6D6" BorderThickness="1" CornerRadius="12"/>-->
                <!--<TextBlock Text=" "
                       Grid.Column="1"
                       FontFamily="Segoe Print"
                           FontSize="{Binding FontSize, ElementName=txt_titile_1}"
                            Foreground="White"
                       HorizontalAlignment="Center"
                       VerticalAlignment="Center"
                       Grid.Row="0" />-->
                <!--<Border Grid.ColumnSpan="3" CornerRadius="12,12,0,0" x:Name="border_GridTitle"
                    Background="#FF1FCCD4"
                     />-->
                <TextBlock x:Name="txt_titile_1" Text=" "
                        FontFamily="Segoe Print"
                           Foreground="White"
                           FontSize="19"
                       HorizontalAlignment="Center"
                       VerticalAlignment="Center"/>
              

                <ComboBox x:Name="ComBox_BR_Para_List"
                                  Grid.Row="0"
                          SelectedItem="{Binding OSA_Scan_Para}"
                          ItemsSource="{Binding list_BR_Scan_Para}"
                                  Height="{Binding ActualHeight, ElementName=ComBox_Cell_Base, Mode=OneWay}"
                                  Style="{StaticResource style_combobox_center}" 
                          DropDownOpened="ComBox_BR_Para_List_DropDownOpened"
                          DropDownClosed="ComBox_BR_Para_List_DropDownClosed"
                          Grid.ColumnSpan="3" />
                <!--<Border Grid.Row="1" Background="#FF8BD9DC"/>-->

                <Border BorderBrush="#FF878787" BorderThickness="2" CornerRadius="5" Grid.Row="2" >
                    <ScrollViewer x:Name="scrolV" Grid.Row="2" ScrollViewer.VerticalScrollBarVisibility="Auto" Margin="5">
                        <ItemsControl x:Name="itms_DAC_WL"  HorizontalAlignment="Stretch"
                                 ItemsSource="{Binding list_BR_DAC_WL}"  >
                            <!--<ItemsControl.ItemsPanel>
                                <ItemsPanelTemplate>
                                    <UniformGrid Columns="1" Rows="12"/>
                                </ItemsPanelTemplate>
                            </ItemsControl.ItemsPanel>-->
                            <ItemsControl.ItemTemplate>
                                <DataTemplate>
                                    <ui:UC_OSA_WL_Button txtbox_content="{Binding ''}" Height="45" PreviewMouseDown="UC_OSA_WL_Button_PreviewMouseDown"/>
                                </DataTemplate>
                            </ItemsControl.ItemTemplate>
                        </ItemsControl>

                    </ScrollViewer>
                </Border>
            </Grid>
